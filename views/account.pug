extends layout

block content
  .inner
    h2 Изменение аккаунта
    form(action="/account" method="POST")
      label(for="name") Имя
      input(type="text" name="name" value=user.name)
      label(for="email") Email
      input(type="email" name="email" value=user.email)
      input.button(type="submit", value="Сохранить")
