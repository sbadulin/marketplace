extends layout

block content
  .inner
    h2 Лучшие компании
    table.table
      thead
        td Фото
        td Место в рейтинге
        td Название
        td Отзывов
        td Средняя оценка
      each store, i in stores
        tr
          td
            a(href=`/stores/${store.slug}`)
              img(width=200 src=`/uploads/${store.photo || store.png}` alt="store.name")
          td #{i+1}
          td: a(href=`/stores/${store.slug}`)= store.name
          td= store.reviews.length
          td #{Math.round(store.averageRating * 10 )/ 10 }

